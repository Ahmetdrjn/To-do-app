    <script>
        function saveTasks() {
          const tasks = [];
          document.querySelectorAll('#gorevListesi li').forEach(item => {
            tasks.push({
              text: item.firstChild.textContent.trim(),
              completed: item.classList.contains('completed')
            });
          });
          localStorage.setItem('tasks', JSON.stringify(tasks));
        }
      
        function loadTasks() {
          const tasks = JSON.parse(localStorage.getItem('tasks')) || [];
          const gorevListesi = document.getElementById('gorevListesi');
          tasks.forEach(task => {
            const gorevItem = document.createElement('li');
            gorevItem.className = 'list-group-item d-flex justify-content-between align-items-center';
            if (task.completed) {
              gorevItem.classList.add('completed');
            }
            gorevItem.textContent = task.text;
      
            const tamamlaCheckbox = document.createElement('input');
            tamamlaCheckbox.type = 'checkbox';
            tamamlaCheckbox.className = 'form-check-input me-2';
            tamamlaCheckbox.checked = task.completed;
            tamamlaCheckbox.addEventListener('click', function() {
              gorevItem.classList.toggle('completed');
              saveTasks();
            });
            gorevItem.insertBefore(tamamlaCheckbox, gorevItem.firstChild);
            gorevListesi.appendChild(gorevItem);
          });
        }

        document.getElementById('gorevEkleBtn').addEventListener('click', function() {
          const gorevInput = document.getElementById('gorevInput');
          const gorevText = gorevInput.value.trim();
          if (gorevText === '') return;

          const gorevItem = document.createElement('li');
          gorevItem.className = 'list-group-item d-flex justify-content-between align-items-center';
          gorevItem.textContent = gorevText;

          const tamamlaCheckbox = document.createElement('input');
          tamamlaCheckbox.type = 'checkbox';
          tamamlaCheckbox.className = 'form-check-input me-2';
          tamamlaCheckbox.addEventListener('click', function() {
            gorevItem.classList.toggle('completed');
            saveTasks();
          });
          gorevItem.insertBefore(tamamlaCheckbox, gorevItem.firstChild);
          document.getElementById('gorevListesi').appendChild(gorevItem);

          gorevInput.value = '';
          saveTasks();
        });

        document.getElementById('tamamlananGorevlerBtn').addEventListener('click', function() {
          const items = document.querySelectorAll('#gorevListesi li');
          items.forEach(item => {
            if (item.classList.contains('completed')) {
              item.classList.toggle('d-none');
            } else {
              item.classList.remove('d-none');
            }
          });
        });

        document.getElementById('tamamlanmayanGorevlerBtn').addEventListener('click', function() {
          const items = document.querySelectorAll('#gorevListesi li');
          items.forEach(item => {
            if (!item.classList.contains('completed')) {
              item.classList.toggle('d-none');
            } else {
              item.classList.remove('d-none');
            }
          });
        });

        document.getElementById('tumGorevlerBtn').addEventListener('click', function() {
          const items = document.querySelectorAll('#gorevListesi li');
          items.forEach(item => {
            item.classList.remove('d-none');
          });
        });

        document.addEventListener('DOMContentLoaded', loadTasks);
    </script>
  </body>
